{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "regex" : "/(about|arigato)",
        "destination" : "/",
        "type" : 301
      },
      {
        "regex" : "/articles/tag/(\\d+)",
        "destination" : "/tags/:1",
        "type" : 301
      },
      {
        "regex" : "/articles/(\\d+)",
        "destination" : "/posts/:1",
        "type" : 301
      }
    ],
    "trailingSlash": false
  }
}
